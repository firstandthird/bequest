{
  "name": "bequest",
  "version": "1.3.1",
  "description": "An ajax class",
  "main": "dist/ajax.js",
  "scripts": {
    "build": "mkdir -p dist && babel lib/ajax.js --out-file dist/ajax.js --source-maps",
    "dev": "concurrently -r 'nswatch' 'static-server -p 8000'",
    "lint": "eslint lib/ajax.js",
    "prepublish": "npm run build"
  },
  "watch": {
    "lib/ajax.js": [
      "lint",
      "build"
    ]
  },
  "keywords": [
    "browser",
    "ajax",
    "request"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/bequest.git"
  },
  "bugs": {
    "url": "https://github.com/firstandthird/bequest/issues"
  },
  "homepage": "https://github.com/firstandthird/bequest#readme",
  "devDependencies": {
    "babel-cli": "^6.22.1",
    "babel-preset-es2015": "^6.14.0",
    "concurrently": "^3.1.0",
    "eslint": "^3.9.1",
    "eslint-config-firstandthird": "^3.1.0",
    "eslint-plugin-import": "^2.1.0",
    "nswatch": "^0.2.0",
    "static-server": "^2.0.3"
  },
  "eslintConfig": {
    "extends": "firstandthird"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
